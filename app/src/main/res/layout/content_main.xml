<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cillian.photointents.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/photo_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/photo_uri"
        android:layout_alignParentTop="true"
        android:padding="50dp"
        android:scaleType="center"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintHeight_max="100dp"
        app:layout_constraintWidth_max="100dp"
        app:layout_goneMarginBottom="50dp"/>

    <TextView
        android:id="@+id/photo_uri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/photo_thumb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_thumb"/>

</android.support.constraint.ConstraintLayout>
